<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/height_44"
        android:text="点击发送短信验证码到您的手机"
        android:textColor="@color/color_a6a6a6"
        android:textSize="@dimen/textsize_14" />

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="134********"
        android:textColor="@color/color_434343"
        android:textSize="@dimen/textsize_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/phone_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/code_button"
            android:background="@drawable/edittext_bg"
            android:hint="@string/input_code_hint"
            android:paddingLeft="@dimen/space_12"
            android:textSize="@dimen/textsize_14" />

        <Button
            android:id="@+id/code_button"
            style="@style/comm_button_style"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="24dp"
            android:text="获取验证码" />

    </RelativeLayout>

    <Button
        android:id="@+id/okButton"
        style="@style/comm_button_style"
        android:layout_marginTop="30dp"
        android:text="@string/pay_sure" />

</LinearLayout>