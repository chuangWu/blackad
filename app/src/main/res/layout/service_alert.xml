<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/privilege_img"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:scaleType="fitCenter"
            android:background="@mipmap/service_img_def"
             />

        <TextView
            android:id="@+id/privilege_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="私人飞机"
            android:textColor="#E3A63F"

            android:textSize="@dimen/textsize_18" />

        <TextView
            android:id="@+id/privilege_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:lineSpacingMultiplier="1.5"
            android:text="高效便捷随时出发，无需办理手续 立即登机，独享私密空间。"
            android:textColor="#070707"
            android:textSize="@dimen/textsize_14" />

        <Button
            android:id="@+id/service"
            style="@style/comm_button_style"
            android:layout_marginBottom="29dp"
            android:text="召唤管家" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:src="@mipmap/service_close" />
</LinearLayout>