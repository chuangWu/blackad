<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_guid_background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="288dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:src="@mipmap/icon_guid3" />

    <TextView
        android:id="@+id/skipText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_guid_skip2"
        android:gravity="center"
        android:text="立即体验"
        android:textColor="@color/color_e3a63f"
        android:textSize="@dimen/textsize_20" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_20"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#4d4d4d" />

        <TextView
            android:id="@+id/dot2View"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_guid_dot"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_18" />


        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@id/dot2View"
            android:background="@drawable/shape_guid_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_18" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/dot2View"
            android:background="@drawable/shape_guid_dot_white"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_18" />

    </RelativeLayout>
</RelativeLayout>