<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cellView"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_12"
        android:paddingRight="@dimen/space_12">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="黑卡卡号"
            android:textColor="@color/color_434343"
            android:textSize="@dimen/textsize_14" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iconMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_more" />

        <EditText
            android:id="@+id/contentText"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint=""
            android:layout_toLeftOf="@id/iconMore"
            android:background="@null"
            android:gravity="right"
            android:text="5884668"
            android:textColor="@color/color_a6a6a6"
            android:textSize="@dimen/textsize_14" />

    </RelativeLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/space_12"
        android:background="@color/color_d7d7d7" />
</LinearLayout>