<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/space_12">

        <TextView
            android:id="@+id/tradeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="+￥100.00"
            android:textColor="@color/color_434343"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tradeGoodsName"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="打家管打卡管家管家管家管家"
            android:textColor="@color/color_434343"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tradeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tradeGoodsName"
            android:layout_marginTop="10dp"
            android:text="2017-05-01 11:24"
            android:textColor="@color/color_a6a6a6"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tradeGoodsName"
            android:layout_marginTop="10dp"
            android:text="订单号"
            android:textColor="@color/color_a6a6a6"
            android:textSize="@dimen/textsize_12" />

    </RelativeLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:background="#D7D7D7" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/shape_time"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="2017年4月"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textsize_10"
        android:visibility="gone" />


</LinearLayout>